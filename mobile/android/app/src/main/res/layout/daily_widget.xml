<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bg_transparent">

    <!-- Background Image (Edge-to-Edge) -->
    <ImageView
        android:id="@+id/widget_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/rounded_bg_transparent" />

    <!-- Content Container (Padded) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FORECAST"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/refresh_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:background="#00000000"
                android:src="@drawable/ic_refresh"
                android:tint="#CCFFFFFF"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Day 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/day1_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
            <ImageView
                android:id="@+id/day1_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_clear"
                android:tint="#FFFFFF"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/day1_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20° / 10°"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </LinearLayout>

        <!-- Day 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/day2_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
            <ImageView
                android:id="@+id/day2_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_clear"
                android:tint="#FFFFFF"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/day2_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21° / 11°"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </LinearLayout>

        <!-- Day 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/day3_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
            <ImageView
                android:id="@+id/day3_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_clear"
                android:tint="#FFFFFF"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/day3_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19° / 9°"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
