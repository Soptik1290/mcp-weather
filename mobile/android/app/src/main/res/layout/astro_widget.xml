<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bg_transparent">

    <ImageView
        android:id="@+id/widget_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/rounded_bg_transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASTRONOMY"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layout_centerVertical="true" />
            
            <ImageButton
                android:id="@+id/refresh_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:background="#00000000"
                android:src="@drawable/ic_refresh"
                android:tint="#CCFFFFFF"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Sun Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_clear"
                android:tint="#FFD700" 
                android:layout_marginEnd="12dp"/>
            <TextView
                android:id="@+id/sun_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="06:00  20:00"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </LinearLayout>

        <!-- Moon Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_moon"
                android:tint="#E0E0E0"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:id="@+id/moon_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waxing Gibbous"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </LinearLayout>

        <!-- Aurora Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:tint="#7C3AED"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:id="@+id/aurora_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kp 2.0 (15%)"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
